{
  "manifest_version": 2,
  "name": "Smarter Smartschool - Firefox",
  "short_name": "SSS",
  "version": "5.8",
  "description": "Makes smartschool smart.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "static/img/icon_16.png",
    "48": "static/img/icon_48.png",
    "128": "static/img/icon_128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sss@WaTh.dev"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.smartschool.be/Grades*"
      ],
      "js": [
        "static/js/jquery-3.4.1.min.js",
        "BetterGrades.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.smartschool.be/results*"
      ],
      "js": [
        "static/js/jquery-3.4.1.min.js",
        "BetterResults.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.smartschool.be/*"
      ],
      "js": [
        "BetterStyle.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "static/img/icon_128.png"
  ]
}
